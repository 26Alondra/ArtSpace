@model IEnumerable<ArtSpace.Models.Paqueteria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEnvios.cshtml";
}
<br />
<center>
    <img src="~/resources/paqueteria.png" />
    <h2>Listado de Paqueterías</h2>
</center>
<hr />
<center>
    <div class="form-actions form-row">
        <div class="col">
            <input type="button" onclick="location.href='@Url.Action("Create", "Paqueteria")'" value="Crear nueva" class="btn btn-info btn-lg" />
        </div>
    </div>
    <br/>
    <table class="table">
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.RFC)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Web)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Contacto)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.telContacto)
            </th>
            <th style="text-align:center; width:330px">Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td  style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.RFC)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Web)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Contacto)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.telContacto)
                </td>
                <td  style="text-align:center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-info btn-lg" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-lg" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-info btn-lg" })
                </td>
            </tr>
        }

    </table>
</center>