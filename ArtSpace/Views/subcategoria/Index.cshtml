@model IEnumerable<ArtSpace.Models.subcategoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<h1 style="font-family: 'Segoe UI' ; text-align:center">Lista de Subcategorías</h1>

<p style="font-family: 'Segoe UI'">
    @Html.ActionLink("Crear Nueva", "Create")
</p>
<table class="table" style="font-family: 'Segoe UI'">
    <tr>
        <th>
            Subcategoria
        </th>
        <th>
            Descripción
        </th>
        <th>
            Categoria
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="font-family: 'Segoe UI'">
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categoria.nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_subcategoria }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_subcategoria }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_subcategoria })
        </td>
    </tr>
}

</table>
