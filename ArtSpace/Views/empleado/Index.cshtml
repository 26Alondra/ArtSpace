@model IEnumerable<ArtSpace.Models.empleado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family: 'Segoe UI' ; text-align:center">Lista de Empleados</h1>

<p style="font-family: 'Segoe UI' ">
    @Html.ActionLink("Nuevo Empleado", "Create")
</p>
<table class="table">
    <tr style="font-family: 'Segoe UI' ">
        <th>
            Nombre Completo
        </th>
        <th>
            Correo Electrónico
        </th>
        <th>
            Rol
        </th>
        <th>
            Departamento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="font-family: 'Segoe UI' ">
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rol)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.departamento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_empleado }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_empleado }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_empleado })
        </td>
    </tr>
}

</table>
