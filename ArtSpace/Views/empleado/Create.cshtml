@model ArtSpace.Models.empleado

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family: 'Segoe UI' ; text-align:center">Nuevo Empleado</h1>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" style="font-family: Verdana">Nombre Completo: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="font-family: Verdana">Correo Electrónico: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="font-family: Verdana">Rol: </label>
            <div class="col-md-10" style="font-family: Verdana">
                @Html.DropDownListFor(model => model.rol,
                                        new List<SelectListItem>{
                                            new SelectListItem {Value = "Administrador", Text="Administrador"},
                                            new SelectListItem {Value = "Comprador", Text="Comprador"},
                                            new SelectListItem {Value = "Enviador", Text="Enviador"},
                                            new SelectListItem {Value = "Chateador", Text="Servicio al Cliente"}
                                        },new {@class = "miselect"})
                @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="font-family: Verdana">Departameto: </label>
            <div class="col-md-10" style="font-family: Verdana">
                @Html.DropDownListFor(model => model.departamento,
                                         new List<SelectListItem>{
                                             new SelectListItem {Value = "Administracion", Text="Administracion"},
                                             new SelectListItem {Value = "Envios", Text="Almacen"},
                                             new SelectListItem {Value = "Compras", Text="Compras"},
                                             new SelectListItem {Value = "Ventas", Text="Ventas"}
                                         },new {@class = "miselect"})
                @Html.ValidationMessageFor(model => model.departamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" style="font-family: Verdana" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div style="font-family: Verdana">
    @Html.ActionLink("Regresar", "Index")
</div>
