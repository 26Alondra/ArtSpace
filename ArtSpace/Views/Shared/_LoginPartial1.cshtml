@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-nav ml-auto" }))
    {
        @Html.AntiForgeryToken()
        String name = @Session["name"].ToString();
        <ul class="navbar-nav ml-auto">
            <li class="flo">
                @Html.ActionLink("¡Hola " + name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class ="nav-link" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Cerrar sesión</a></li>
        </ul>
    }
}
else
{
    <uld class="navbar-nav ml-auto justify-content-center">
        <li>@Html.ActionLink("Registrarse", "Register", "Account", new { id = "registerLink" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", new { id = "loginLink" }, new { @class = "nav-link" })</li>
        <li class="d-flex nav-link text-center">
            @using (Html.BeginForm("buscarProd", "Catalogo", FormMethod.Post, new { @class = "buscar" }))
            {
                <input type="text" placeholder="Nombre producto" required id="nomBuscar" name="nomBuscar" />
                <button class="boton btn-danger" type="submit" value="submit"><i class="fas fa-search"></i></button>
            }
        </li>
    </uld>
}
