@using ArtSpace.Models
@{
    ViewBag.Title = "buscarProd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card:hover {
        box-shadow: -1px 9px 40px -12px #808080;
    }
</style>
<br />
<div class="container">
    <h2>Lista de productos con nombre: @ViewBag.Searchkey</h2>
    <br />
    <div class="col-xl-12 col-md-9">
        <div class="row justify-content-center">
            @foreach (producto producto in ViewBag.Listado)
            {
                <div class="card" style="width:250px; margin:10px;">
                    <div class="card-body">
                        <img class="card-img-top" src="~/resources/productos/@producto.imagen" />
                        <h5 class="card-title text-center">@producto.nombre</h5>
                        <h6 class="card-subtitle mb-2 text-muted text-center">Disponibles: @producto.existencia</h6>
                        <p class="card-text text-center">Precio:$@producto.precio</p>
                        <div class="card-footer text-center">
                            <a href="@Url.Action("verProducto","Catalogo",new { idProducto=producto.Id_producto})" class="btn btn-danger btn-block" style="margin-bottom:5px;">Ver producto</a>
                            <a href="@Url.Action("Agregar","Carro",new { id=producto.Id_producto})" class="btn btn-outline-danger btn-block"><i class="fas fa-cart-plus"></i> Añadir al carrito</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    $('.card').hover(
        function() {
            $(this).animate({
                marginTop: "-=1%",
                marginButtom: "+=1%"
            },200)
        },
        function () {
            $(this).animate({
                marginTop: "+=1%",
                marginButtom: "-=1%"
            })
        }
    )
</script>
